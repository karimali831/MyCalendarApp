@using System.Configuration
@using StackExchange.Profiling
@{
    var AppName = ConfigurationManager.AppSettings["AppName"];
    var version = ConfigurationManager.AppSettings["AppVersion"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@AppName</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Loader.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/menu/navik.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/SidebarMenu.css" rel="stylesheet" type="text/css" />
    <!-- forms -->
    <link rel="stylesheet" type="text/css" href="~/Content/form/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/form/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Content/form/fonts/iconic/css/material-design-iconic-font.min.css">
    <script src="https://kit.fontawesome.com/b963a5daf8.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    @Html.Partial("_MenuHeader")
    <div class="container body-container">
        <div class="body-content" style="padding-top: 120px">
            @*<i class="fa-3x fas fa-circle-notch fa-spin"></i>*@

            @RenderBody()
        </div>
        <div class="container">
            <hr />
            <footer>
                <small>&copy; @DateTime.Now.Year - @AppName <a href="/home/changelog" class="float-right">v@(version)</a></small>
            </footer>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $("[data-toggle='popover']").popover({
            //trigger: 'focus',
            container: 'body',
            html: true
        });
    </script>

    <script src="~/Scripts/navik.menu.js"></script>
    @RenderSection("Scripts", false)
    @MiniProfiler.Current.RenderIncludes()
</body>
</html>