@model MyCalendar.Website.ViewModels.CronofyVM

<h2>Calendars</h2>

@foreach (var profile in Model.Profiles)
{
    <div class="row">
        <div class="col-xs-8">
            <h3>@profile.Key.Name</h3>
        </div>

        <div class="col-xs-4 text-right">
            <a href="/calendars/new/@profile.Key.Id" class="btn btn-primary">
                New Calendar
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var calendar in profile.Value)
            {
                <tr>
                    <td>
                        @calendar.Name
                    </td>
                    <td>
                        <a href="/cronofy/calendar/@calendar.CalendarId">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
