@using MyCalendar.Website.ViewModels 
@using MyCalendar.Enums

@{
    ViewBag.Title = "Authenticate";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    @Html.Partial("_Status", new BaseVM { UpdateStatus = (Status.Failed, ViewBag.ErrorMessage) })
}

@using (Html.BeginForm("Index", "Home"))
{
    <div class="form-group">
        <input type="password" style="width: 180px; display: inline" class="form-control" name="passcode" placeholder="Enter passcode" />
        <input type="submit" class="btn btn-primary" value="Enter App" />
    </div>
}